<p>
    <strong>Username:</strong> <%= @user.username %>
</p>

<p>
    <strong>Role:</strong> <%= @user.role %>
</p>

<% if can? :update, User %>
  <%= link_to ("<i class='mdi-editor-mode-edit left'></i> Edit").html_safe, edit_user_path(@user.id), :encode => "javascript", :class => "btn blue lighten-1" %>
  &nbsp;&nbsp;
<% end %>

<% if current_user.role?(:admin) %>
  <%= link_to ("<i class='mdi-action-delete left'></i> Deactivate").html_safe, user_path(@user.id), data: { confirm: "Are you sure you want to deactivate #{@user.username}?" }, method: :delete, :encode => "javascript", :class => "btn red" %>
<% end %>