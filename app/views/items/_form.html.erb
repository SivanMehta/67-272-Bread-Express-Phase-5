<%= form_for(@item) do |form| %>
<% if @item.errors.any? %>
    <ul class = "collection with-header">
        <li class = "collection-header">
            <h4>
                <i class = "mdi-alert-error"></i>
                <%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:
            </h4>
        </li>
        <% @item.errors.full_messages.each do |msg| %>
            <li class = "collection-item"><i class = "mdi-communication-dnd-on"></i> <%= msg %></li>
        <% end %>
        </ul>
  <% end %>

    <div class = "row">
        <div class = "input-field col s4">
            <%= form.label :name %><br />
            <%= form.text_field :name %>
        </div>
        <div class = "col s4">
          <%= form.label :category %>
          <%= form.select :category, Item::CATEGORIES %>
        </div>
    </div>
    <div class = "row">
        <div class = "input-field col s6">
            <p>Pick a Photo!</p>
            <%= form.file_field :photo %>
        </div>
    </div>

    <div class = "actions">
        <button class="btn green" type="submit" name="action">
          <i class='mdi-content-add left'></i> Create Item
      </button>
    </div>
<% end %>