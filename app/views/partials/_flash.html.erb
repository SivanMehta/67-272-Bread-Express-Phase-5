<% if flash.any? %>
    <ul class = "collection">
        <% flash.each do |name, msg| %>
            <% if name == :alert %>
                <li class="collection-item red"><%= msg %></li>
            <% else %>
                <li class="collection-item green"><%= msg %></li>
            <% end %>
        <% end %>
    </ul>
<% end %>