<% if logged_in? %>
  <% opt = "#{object.respond_to?(:name) ? object.name : model_name.capitalize }" %>

  <div class="form-actions">
    
    <% if can? :update, object %>
      <%= link_to ("<i class='mdi-editor-mode-edit left'></i> Edit").html_safe, eval("edit_#{model_name}_path(object)"), :encode => "javascript", :class => "btn blue lighten-1" %>
      &nbsp;&nbsp;
    <% end %>
    
    <% if current_user.role?(:admin) %>
      <%= link_to ("<i class='mdi-action-delete left'></i> Deactivate").html_safe, eval("#{model_name}_path(object)"), data: { confirm: "Are you sure you want to delete #{@customer.proper_name}?" }, method: :delete, :encode => "javascript", :class => "btn red" %>
    <% end %>
  </div>
<% end %>
